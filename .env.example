# If running via Docker, Dockerfile sets OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:12b

# Embeddings
EMBEDDING_MODEL=mxbai-embed-large

# Chunking (text + tables)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNK_TABLE_SIZE=2000
CHUNK_TABLE_OVERLAP=200

# Reranking ("cross" or "bi")
RERANKER_TYPE=cross
BIENCODER_RERANKER_MODEL=sentence-transformers/all-MiniLM-L6-v2
CROSSENCODER_RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANK_TOP_K=3
RETRIEVER_TOP_K=10

# API
API_HOST=0.0.0.0
API_PORT=8000